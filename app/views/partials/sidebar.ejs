<div class="user__container">
  <a href="<%= user._id %>">
    <% if (user.profilePhoto) { %>
    <img class="user__image" alt src="/upload/<%= user.profilePhoto %>">
    <% } else {%>
    <img class="user__image" alt src="/images/user.png">
    <% } %>
  </a>
  <a href="<%= user._id %>">
    <h2 class="user__name">
      <%= user.username + ' ' + user.lastName%>
    </h2>
    <span class="user__username"><%= user.username %></span>
  </a>
</div>

<div class="routes__container">
  <ul class="routes__list">
    <a class="route" href="/beers"><li>Beers</li></a>
    <a class="route" href="/matches"><li>Matches</li></a>
    <a class="route" href="/<%= user._id %>"><li>Account</li></a>
  </ul>
  <button class="primary__button" type="button" name="button">
    <a href="/add-beer">add beer</a>
  </button>
</div>
